type Item {
  id: ID!
  sku: String!
  price: Float!
}

type Cart {
  id: ID!
  items: [Item!]!
  total: Float
}

type Query {
  items: [Item!]!
  cart: Cart!
}

input NewItem {
  sku: String!
  price: Float!
}

type Mutation {
  createItem(item: NewItem!): Item!
  addItemToCart(sku: String!): Cart!
  checkout(cart_id: ID!): String!
}
